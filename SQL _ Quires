select *
from[dbo].[CovidDeaths]
where continent is not null
order by 3,4
-----------------------------


select location , date , total_cases,total_deaths,(total_deaths/total_cases)*100 death_percent
from [dbo].[CovidDeaths]
where location = 'Egypt'
order by 1,2 
------------------------------------------------------------
--looking at total cases vs populations
-- shows what per of population got covid
select location , date ,population, total_cases,(total_cases/population)*100 percent_of_population_infaction
from [dbo].[CovidDeaths]
where location = 'Egypt'
order by 1,2

----------------------------------------------------------------
--looking at the countries with a highest infaction rate to population
select location , population ,max( total_cases) highest_infaction_country ,
       max(total_cases/population)*100 percent_of_population_infaction
from   [dbo].[CovidDeaths]
where continent is not null
group by location , population
order by percent_of_population_infaction desc

------------------------------------------------------------------
--showing countries with highest death count per population
select location , max(total_deaths) max_death
from   [dbo].[CovidDeaths]
where continent is not null
group by location 
order by max_death desc

--lets break things down by continent

--showing the contintents with the highest death count per population

select continent , max(total_deaths) total_death_count
from   [dbo].[CovidDeaths]
where continent is not null
group by continent 
order by total_death_count desc

------global numbers

select   sum(total_cases) total_case, sum(new_deaths) new_deaths, 
         sum(new_deaths)/sum(new_cases)*100 death_percent
from CovidDeaths
where continent is not null and total_cases is not null
--group by date
order by 1,2 


----------------------------------------------------------------
--looking at total population vs vaccinations
with PopVsVac (continent,location,date,population,new_vaccinations,rollingPeopleVaccination)
as
(select d.continent,d.location,d.date,d.population,v.new_vaccinations
      ,sum(v.new_vaccinations) over (partition by d.location order by d.location,d.date ) rollingPeopleVaccination
    --  ,(rollingPeopleVaccination/population)*100
from CovidVaccinations v 
join CovidDeaths d
on v.[iso_code] = d.[iso_code]
where d.continent is not null )
--order by 1,2,3)

--Use CTE
select *,(rollingPeopleVaccination/population)*100
from PopVsVac

--------------------------------------------------------------------
---------------------Temp table-------------------------------------
--------------------------------------------------------------------
use [ProtfolioProject]
create table #percent_population_vacenated
(
continent  nvarchar(255),
location   nvarchar(255),
date       datetime,
population numeric,
new_vaccinations numeric,
rollingPeopleVaccination numeric,
)
----------------------------------------------------------------------
insert into #percent_population_vacenated
select 
    d.continent,
    d.location,
    d.date,
    d.population,
    v.new_vaccinations,
    sum(v.new_vaccinations) over (partition by d.location order by d.date) as rollingPeopleVaccination
from  CovidDeaths d 
join  CovidVaccinations v 
on v.iso_code = d.iso_code and d.date = v.date
--where d.continent is not null;

select *, (rollingPeopleVaccination / population) * 100 as vaccination_percentage
from #percent_population_vacenated;

----creating view to store the data for later vis--------------------

create view percent_population_vacenated as
select 
    d.continent,
    d.location,
    d.date,
    d.population,
    v.new_vaccinations,
    sum(v.new_vaccinations) over (partition by d.location order by d.date) as rollingPeopleVaccination
from  CovidDeaths d 
join  CovidVaccinations v 
on v.iso_code = d.iso_code and d.date = v.date

select *
from percent_population_vacenated
